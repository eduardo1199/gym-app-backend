// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String @default(uuid())
  name      String
  year      String
  cpf       String @id
  password  String
  birthDate String

  @@unique([id])
}

model Machine {
  id          String  @id @default(uuid())
  name        String
  description String
  maintenance Boolean
}

model Plan {
  id         String  @id @default(uuid())
  name       String
  timeOfPlan Int
  price      Decimal

  users User[]
}

model User {
  id               String   @default(uuid())
  name             String
  age              String
  weight           Decimal
  cpf              String   @id
  registrationDate DateTime @default(now())
  startDateForPlan DateTime
  endDateforPlan   DateTime

  plan   Plan?   @relation(fields: [planId], references: [id])
  planId String?

  @@unique([id])
}
